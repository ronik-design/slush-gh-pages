{
  "private": true,
  "name": "{SLUSH{=slug}}",
  "version": "{SLUSH{=version}}",
  "description": "{SLUSH{=description}}",
  "author": {
    "name": "{SLUSH{=author}}",
    "email": "{SLUSH{=email}}"
  },
  "generator": "slush-gh-pages v{SLUSH{=generatorVersion}}",
  "license": "UNLICENSED",
  "homepage": "https://github.com/{SLUSH{=github}}",
  "repository": {
    "type": "git",
    "url": "git://github.com/{SLUSH{=github}}.git"
  },
  "bugs": {
    "url": "https://github.com/{SLUSH{=github}}/issues"
  },
  "engines": {
    "node": ">= 4.0.0"
  },
  "scripts": {
    "serve": "node -e 'setTimeout(function() {}, 2000)' && browser-sync start --server _site --port 8888 --files _site --reload-debounce",
    "build:jekyll": "JEKYLL_GITHUB_TOKEN=$([ -f .githubtoken ] && cat .githubtoken) JEKYLL_ENV=production bundle exec jekyll build --safe --config _config.yml",
    "build": "npm run clean &&  npm-run-all -p build:*",
    "watch:jekyll": "JEKYLL_GITHUB_TOKEN=$([ -f .githubtoken ] && cat .githubtoken) JEKYLL_ENV=development bundle exec jekyll build --safe --watch --incremental --config _config.yml,_config-development.yml || true",
    "watch": "npm-run-all --continue-on-error --parallel watch:* serve",
    "postinstall": "bundle install && chmod +x __tests__/test.sh && npm test",
    "preversion": "npm test",
    "postversion": "git push && git push --tags",
    "test": "JEKYLL_GITHUB_TOKEN=$([ -f .githubtoken ] && cat .githubtoken) JEKYLL_ENV=production __tests__/test.sh",
    "deploy": "npm version minor",
    "start": "npm run watch"
  },
  "devDependencies": {
    "browser-sync": "^2.14.0",
    "npm-run-all": "^3.1.0"
  }
}
